{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Risk Metrics Schema",
  "description": "Schema for risk.json output",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["player_id", "injury_risk", "volatility", "minutes_risk"],
    "properties": {
      "player_id": {
        "type": "string",
        "description": "Unique NBA player ID"
      },
      "injury_risk": {
        "type": "integer",
        "minimum": 0,
        "maximum": 100,
        "description": "Injury likelihood score"
      },
      "volatility": {
        "type": "integer",
        "minimum": 0,
        "maximum": 100,
        "description": "Performance consistency score"
      },
      "minutes_risk": {
        "type": "integer",
        "minimum": 0,
        "maximum": 100,
        "description": "Minutes reduction risk score"
      },
      "availability_risk": {
        "type": "number",
        "minimum": 0.0,
        "maximum": 1.0,
        "description": "Likelihood projection misses due to games availability"
      },
      "role_risk": {
        "type": "number",
        "minimum": 0.0,
        "maximum": 1.0,
        "description": "Role/minutes instability risk"
      },
      "composition_risk": {
        "type": "number",
        "minimum": 0.0,
        "maximum": 1.0,
        "description": "Stat composition volatility risk"
      },
      "total_risk": {
        "type": "number",
        "minimum": 0.0,
        "maximum": 1.0,
        "description": "Weighted combined uncertainty risk"
      },
      "risk_level": {
        "type": "string",
        "enum": ["Low", "Medium", "High"],
        "description": "Categorical uncertainty risk level"
      }
    }
  }
}
