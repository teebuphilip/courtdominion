# CourtDominion Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# Environment (local, production, test)
ENVIRONMENT=local

# Backend URL (for automation to validate)
BACKEND_URL=http://localhost:8000

# Data directory (shared between backend and automation)
DATA_DIR=/data/outputs

# ============================================================================
# DATABASE CONFIGURATION (Phase 2 - not used in Phase 1)
# ============================================================================

# PostgreSQL connection
DATABASE_URL=postgresql://courtdominion:courtdominion123@db:5432/nba_fantasy

# Database connection details
DB_HOST=db
DB_PORT=5432
DB_NAME=nba_fantasy
DB_USER=courtdominion
DB_PASSWORD=courtdominion123

# ============================================================================
# AUTOMATION CONFIGURATION
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# NOTES
# ============================================================================

# Phase 1 Setup:
# - Backend reads JSON files from DATA_DIR
# - Automation writes JSON files to DATA_DIR
# - Database is optional (for Phase 2)
# - DATA_DIR is shared via Docker volume

# Phase 2 Setup:
# - Backend reads from PostgreSQL database
# - Automation writes to database
# - JSON files used as backup/cache
