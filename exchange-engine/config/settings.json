{
  "dbb2_api": {
    "base_url": "http://localhost:8000",
    "projections_endpoint": "/projections/today",
    "timeout_seconds": 30
  },
  "ev_thresholds": {
    "take_edge_pct": 4.0,
    "make_edge_pct": 2.0,
    "min_confidence": 0.60,
    "min_available_size": 25,
    "max_bets_per_day": 10
  },
  "kelly": {
    "fraction": 0.25,
    "max_units": 3.0,
    "min_units": 0.5,
    "bankroll": 5000
  },
  "exchange": {
    "mode": "MAKE_AND_TAKE",
    "time_in_force_seconds": 600,
    "price_shade_pct": 0.02,
    "fee_bps": 0,
    "include_sources": ["novig", "prophetx"]
  },
  "risk_overlay": {
    "mode": "observe",
    "alpha_confidence": 0.35,
    "beta_units": 0.50,
    "high_risk_edge_multiplier": 0.80,
    "max_availability_risk": 0.85,
    "daily_risk_path_pattern": "data/risk/{date}.json",
    "fallback_risk_path": "../dbb2-engine/output/risk.json",
    "fallback_weights": {
      "injury_risk": 0.5,
      "minutes_risk": 0.3,
      "volatility": 0.2
    }
  }
}
