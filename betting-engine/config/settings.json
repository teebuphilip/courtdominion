{
  "odds_api": {
    "base_url": "https://api.the-odds-api.com/v4",
    "api_key": "REPLACE_WITH_YOUR_KEY",
    "sport": "basketball_nba",
    "regions": ["us"],
    "markets": ["player_points", "player_rebounds", "player_assists", "player_threes", "player_steals", "player_blocks"],
    "bookmakers": ["draftkings", "fanduel", "betmgm"]
  },
  "dbb2_api": {
    "base_url": "http://localhost:8000",
    "projections_endpoint": "/projections/today",
    "timeout_seconds": 30
  },
  "ev_thresholds": {
    "min_edge_pct": 5.0,
    "min_confidence": 0.60,
    "max_bets_per_day": 10
  },
  "kelly": {
    "fraction": 0.25,
    "max_units": 3.0,
    "min_units": 0.5,
    "bankroll": 5000
  },
  "props": {
    "points": "player_points",
    "rebounds": "player_rebounds",
    "assists": "player_assists",
    "threes": "player_threes",
    "steals": "player_steals",
    "blocks": "player_blocks"
  },
  "excluded": {
    "skip_b2b": true,
    "skip_death_spots": true,
    "skip_blowout_sensitivity": true
  },
  "output": {
    "terminal": true,
    "json": true,
    "markdown": true
  },
  "kalshi": {
    "base_url": "https://trading-api.kalshi.com/trade-api/v2",
    "demo_url": "https://demo-api.kalshi.co/trade-api/v2",
    "use_demo": false,
    "api_key_id": "REPLACE_WITH_YOUR_KEY_ID",
    "private_key_path": "config/kalshi_private_key.pem",
    "nba_series_tag": "NBA",
    "prop_types": ["points", "rebounds", "assists", "threes"],
    "max_contracts_per_bet": 100,
    "min_edge_pct": 5.0,
    "min_yes_price": 0.10,
    "max_yes_price": 0.90,
    "rate_limit_delay_seconds": 0.5,
    "min_volume": 100,
    "low_volume_warning": 500
  },
  "bankroll": {
    "daily_limit": 5000,
    "unit_size": 100,
    "min_bet_dollars": 50,
    "starting_season_date": "2026-02-14",
    "season_end_date": "2026-06-30"
  },
  "schedule": {
    "nba_schedule_path": "data/nba_schedule_2026.json"
  },
  "clv": {
    "fetch_closing_sportsbook": true,
    "fetch_closing_kalshi": true,
    "closing_window_minutes_before_tipoff": 10,
    "min_bets_for_avg_clv": 20,
    "positive_clv_threshold": 0.0
  },
  "risk_overlay": {
    "mode": "observe",
    "alpha_confidence": 0.35,
    "beta_units": 0.50,
    "high_risk_edge_multiplier": 0.80,
    "max_availability_risk": 0.85,
    "daily_risk_path_pattern": "data/risk/{date}.json",
    "fallback_risk_path": "../dbb2-engine/output/risk.json",
    "fallback_weights": {
      "injury_risk": 0.5,
      "minutes_risk": 0.3,
      "volatility": 0.2
    }
  }
}
